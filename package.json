{
  "name": "paderbornjs-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "REACT_APP_VERSION=$npm_package_version react-app-rewired start",
    "build": "REACT_APP_VERSION=$npm_package_version react-app-rewired build",
    "test": "react-app-rewired test",
    "lint": "tslint -t verbose --project .",
    "serve": "PORT=3001 serve -s build",
    "ci:build": "CI=true yarn run build",
    "ci:lint": "CI=true yarn run lint",
    "ci:test": "CI=true react-app-rewired test --runInBand --silent --colors && codecov -t $CODECOV_TOKEN"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@types/react-leaflet": "^1.1.6",
    "apollo-cache-inmemory": "^1.3.5",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-batch-http": "^1.2.3",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "emotion": "^9.2.12",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "leaflet": "^1.3.4",
    "polished": "^2.3.0",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2",
    "react-emotion": "^9.2.12",
    "react-helmet": "^5.2.0",
    "react-leaflet": "^2.1.1",
    "react-markdown": "^4.0.3",
    "react-pose": "^3.3.6",
    "react-scripts": "2.1.1",
    "typeface-raleway": "^0.0.54"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.2",
    "@types/reach__router": "^1.2.0",
    "@types/react": "^16.4.17",
    "@types/react-dom": "^16.0.9",
    "@types/react-helmet": "^5.0.7",
    "babel-plugin-polished": "^1.1.0",
    "codecov": "^3.1.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.0",
    "react-app-rewire-emotion": "^4.0.0",
    "react-app-rewired": "^1.6.2",
    "serve": "^10.0.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.3",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
